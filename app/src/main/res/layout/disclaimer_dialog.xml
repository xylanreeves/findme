<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background">


    <ImageView
        android:id="@+id/f_logo"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:srcCompat="@drawable/fnme"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/para_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f_logo"
        android:layout_marginTop="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/by_clicking_upload"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/our_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/para_1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/our_"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/termsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/para_1"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/our_"
        android:clickable="true"
        android:text="@string/terms_of_services_u"
        android:textColor="@drawable/text_selector"
        android:focusable="true"
        android:layout_toEndOf="@id/our_"
        />

    <TextView
        android:id="@+id/right_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/our_"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/best_of_my_knowledge"

        />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_info"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/upload_btn"
        android:layout_toLeftOf="@id/upload_btn"
        android:background="@drawable/flag_transparent"
        android:text="@string/go_back_"
        android:textAllCaps="false"
        android:textColor="@drawable/text_selector"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_info"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/flag_transparent"
        android:text="@string/upload_"
        android:textAllCaps="false"
        android:textColor="@drawable/text_selector"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        />
</RelativeLayout>