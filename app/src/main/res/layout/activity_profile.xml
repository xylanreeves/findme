<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProfileActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_color"
        >



        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/line_"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/name_heading_layout_p"
            android:background="@color/line_color_light"
            android:layout_marginTop="32dp"
            />


        <LinearLayout
            android:id="@+id/image_layout_p"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@color/line_color_light"
            >

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="4dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="1dp"
                app:sliderIndicatorRadius="1dp"
                app:sliderIndicatorSelectedColor="@color/colorPrimaryDark"
                app:sliderIndicatorUnselectedColor="@color/colorPrimary"
                >

                <ImageView
                    android:id="@+id/iv_auto_image_slider_p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </com.smarteist.autoimageslider.SliderView>


        </LinearLayout>



        <TextView
            android:id="@+id/pb_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_layout_p"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/published_on_"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/pubished_onTv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_p"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="31/12/2016"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />


        <LinearLayout
            android:id="@+id/name_heading_layout_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/image_layout_p"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            >

            <LinearLayout
                android:id="@+id/name_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/nameTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="Name,"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ageTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingBottom="4dp"
                    android:text="16"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender_nation_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/genderTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male,"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nationalityTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:text="Indian"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/missing_since_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/missing_since_field_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/missing_since_"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/missing_sinceTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="4dp"
                    android:text="16 dec 1998"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_detail_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/micro_details_p"
            android:layout_marginTop="32dp"
            >
            <TextView
                android:id="@+id/details_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                />


            <TextView
                android:id="@+id/detailTv_p"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="Details goes here"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_layout_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_detail_p"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="120dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/contact_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_detail_"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                />


            <TextView
                android:id="@+id/contactTv_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="contact here"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="64dp"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/micro_details_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/line_"
            android:layout_marginTop="32dp"
            >


            <LinearLayout
                android:id="@+id/eye_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/eye_color_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/eye_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/eyeTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="Brown"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/height_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/height_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingBottom="2dp"
                    android:text="@string/height_"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/heightTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="6.11"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weight_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/weight_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/weight_"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weightTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="66 Kgs"
                    android:textSize="16sp" />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/personality_layout_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/personality_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/personality_"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/personalityTv_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="INJF"
                    android:textSize="16sp"
                    android:paddingStart="4dp" />



            </LinearLayout>






        </LinearLayout>


    </RelativeLayout>

</ScrollView>