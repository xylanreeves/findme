<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.DonationActivity">


        <Button
            android:id="@+id/donate_ten"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:text="@string/_10"
            android:textColor="@color/text_clr"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/donate_five"
            app:layout_constraintTop_toBottomOf="@+id/play_logo" />

        <ImageView
            android:id="@+id/play_logo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mPaypalAddress"
            app:srcCompat="@drawable/play_logo" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_donate"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                app:title="@string/donate"
                app:titleTextColor="@color/text_clr"
                tools:ignore="UnusedAttribute" />

        </com.google.android.material.appbar.AppBarLayout>


        <Button
            android:id="@+id/mBtcAddress1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:onClick="setBtcButton1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:shadowColor="#00000000"
            android:text="@string/btc_address_wzr"
            android:textAllCaps="false"
            android:textColor="@color/text_clr"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <Button
            android:id="@+id/mBtcAddress2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:onClick="setBtcButton2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:shadowColor="#00000000"
            android:text="@string/btc_address_cb"
            android:textAllCaps="false"
            android:textColor="@color/text_clr"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mBtcAddress1" />


        <Button
            android:id="@+id/mPaypalAddress"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:onClick="setPaypalButton"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/paypal_address"
            android:textAllCaps="false"
            android:textColor="@color/text_clr"
            android:textSize="14sp"
            android:includeFontPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="64dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:srcCompat="@drawable/btclogo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mBtcAddress2"
            app:srcCompat="@drawable/paypallogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="OR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donate_ten" />

        <Button
            android:id="@+id/adButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:onClick="viewAd"
            android:padding="32dp"
            android:text="@string/watch_an_amazing_ad"
            android:textAllCaps="false"
            android:textColor="@color/text_clr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/play_logo"
            app:layout_constraintTop_toBottomOf="@+id/mPaypalAddress"
            app:srcCompat="@drawable/play_g" />

        <Button
            android:id="@+id/donate_one"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:text="@string/_1"
            android:textColor="@color/text_clr"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play_logo" />

        <Button
            android:id="@+id/donate_five"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:text="@string/_5"
            android:textColor="@color/text_clr"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/donate_one"
            app:layout_constraintTop_toBottomOf="@+id/play_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>