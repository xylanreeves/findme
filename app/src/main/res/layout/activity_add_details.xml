<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">


        <HorizontalScrollView
            android:id="@+id/horizontal_scrollview_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/add_name"
            android:paddingRight="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </HorizontalScrollView>


        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/contact_id"
            android:layout_marginTop="64dp"
            android:background="@drawable/button_state_generic"
            android:clickable="true"
            android:focusable="true"
            android:onClick="confirm"
            android:text="@string/next"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/enter_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_name"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:capitalize="words"
            tools:ignore="Deprecated" />


        <EditText
            android:id="@+id/age_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_age"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:inputType="numberDecimal"

            />

        <EditText
            android:id="@+id/missing_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/missing_since_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/e_g_2011"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/gender_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_gender"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/height_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personaility_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/height"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/personaility_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/personality_type"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/personaility_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personaility_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_personality_type"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:inputType="textCapCharacters"
            />



        <EditText
            android:id="@+id/height_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_height"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/weight_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/height_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/weight"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/weight_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_weight"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            android:textAllCaps="false"
            />


        <EditText
            android:id="@+id/nationality_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nationality_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_nationality"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/details_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_details_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/add_here"
            android:maxLines="700"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="64dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry"
            />

        <EditText
            android:id="@+id/contact_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_no_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_contact"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar_id"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:text="@string/add_upto_5"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remember_note"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/name"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/remember_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_scrollview_layout"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/remember_you_canoot_edit_the_name_or_the_images_after_the_upload"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry"
            />

        <TextView
            android:id="@+id/age_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/missing_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/age"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />



        <TextView
            android:id="@+id/missing_since_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_name_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/missing_since"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />




        <TextView
            android:id="@+id/gender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/gender"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/nationality_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eye_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/nationality"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/eye_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/eye_color_"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/eye_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eye_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_eye_color"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />





        <TextView
            android:id="@+id/enter_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nationality_id"
            android:inputType="textMultiLine"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/add_more_details"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/mobile_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/contact_details"
            android:textSize="15sp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry" />


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                app:title="Add Details"
                app:titleTextColor="@color/text_clr" />

        </com.google.android.material.appbar.AppBarLayout>


    </RelativeLayout>


</ScrollView>


