<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">


        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/mobile_id"
            android:layout_alignParentBottom="false"
            android:background="@drawable/button_state_generic"
            android:clickable="true"
            android:focusable="true"
            android:onClick="clickNext"
            android:text="@string/finish"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/enter_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_name"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/age_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_age"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/gender_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_gender"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/nationality_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nationality_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/enter_nationality"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/details_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_details_tv"
            android:background="@color/colorPrimary"
            android:hint="@string/add_here"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="64dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mobile_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_no_tv"
            android:layout_marginBottom="64dp"
            android:background="@color/colorPrimary"
            android:hint="Enter Phone Number"
            android:padding="12dp"
            android:textColor="@color/text_color_light"
            android:textSize="15sp">

        </EditText>

        <HorizontalScrollView
            android:id="@+id/horizontal_scrollview_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/add_name"
            android:scrollbars="none"
            android:paddingRight="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/cancelButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/ic_cancel"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@+id/cardView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="140dp"
                        android:layout_height="200dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:hapticFeedbackEnabled="true"
                        android:outlineAmbientShadowColor="@color/black"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar_id"
            android:paddingVertical="8dp"
            android:paddingLeft="12dp"
            android:text="@string/add_upto_5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_scrollview_layout"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/age_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_name_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/age"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/gender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/gender"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nationality_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/nationality"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/enter_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nationality_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/add_more_details"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mobile_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_id"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
            android:text="@string/mob_no"
            android:textSize="15sp" />


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                app:title="Add Details"
                app:titleTextColor="@color/text_clr" />

        </com.google.android.material.appbar.AppBarLayout>


    </RelativeLayout>


</ScrollView>


